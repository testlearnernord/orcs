{
  "name": "orcs",
  "version": "0.8.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format:write": "prettier --write .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint .",
    "guard:portraits": "node scripts/guards/assert-no-legacy-portraits.mjs && node scripts/guards/portrait-manifest.mjs",
    "guard:portraits:legacy": "node scripts/guards/assert-no-legacy-portraits.mjs",
    "guard:portraits:manifest": "node scripts/guards/portrait-manifest.mjs",
    "ci": "npm run guard:portraits && npm run format:check && npm run lint && npm run typecheck && npm run test && npm run build",
    "predeploy": "rimraf docs && npm run build",
    "deploy": "mkdir -p docs && cp -r dist/* docs/"
  },
  "dependencies": {
    "phaser": "^3.80.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@testing-library/react": "^14.2.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.4.0",
    "husky": "^9.1.4",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.9",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.5",
    "globby": "^14.0.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": "prettier --write"
  }
}
