{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@sim/*": ["src/sim/*"],
      "@ui/*": ["src/ui/*"],
      "@state/*": ["src/state/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["src", "scripts", "assets", "vite.config.ts", "vitest.config.ts"]
}
