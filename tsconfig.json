{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@sim/*": ["src/sim/*"],
      "@ui/*": ["src/ui/*"],
      "@state/*": ["src/state/*"],
      "@core/*": ["src/core/*"]
    }
  },
  "include": ["src", "vite.config.ts", "vitest.config.ts"]
}
